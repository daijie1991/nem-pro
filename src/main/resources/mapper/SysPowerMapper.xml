<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.nem.pro.modules.sys.mapper.SysPowerMapper">

    <select id="selectPower" resultType="com.nem.pro.modules.sys.domain.SysPower">
        select * from sys_power sp
        order by sp.sort asc
    </select>

    <!-- 根据 userId 查询权限 enable 可用 type = 2 操作权限 -->
    <select id="selectPowerByUserId" parameterType="string" resultType="com.nem.pro.modules.sys.domain.SysPower">
        select * from sys_power sp
        left join sys_role_power srp on srp.power_id = sp.id
        left join sys_role sr on sr.id = srp.role_id
        left join sys_user_role sur on sur.role_id = sr.id
        where sur.user_id = #{userId}
        and sr.enable = 1
        and sp.enable = 1
        and sp.type = 2
    </select>

    <select id="selectPowerByRoleId" parameterType="string" resultType="com.nem.pro.modules.sys.domain.SysPower">
        select * from sys_power sp
        left join sys_role_power srp on srp.power_id = sp.id
        where srp.role_id = #{roleId}
    </select>

    <!-- 根据 userId 查询菜单 enable 权限可用 type !=2 菜单结构 -->
    <select id="selectMenu" resultType="com.nem.pro.modules.sys.domain.SysPower">
        select * from sys_power sp
        left join sys_role_power srp on srp.power_id = sp.id
        left join sys_role sr on sr.id = srp.role_id
        left join sys_user_role sur on sur.role_id = sr.id
        where sur.user_id = #{userId}
        and sr.enable = 1
        and sp.enable = 1
        and sp.type != 2
        order by sp.sort asc
    </select>

    <insert id="insert" parameterType="com.nem.pro.modules.sys.domain.SysPower">
        insert into sys_power
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id!=null">
                id,
            </if>
            <if test="parent!=null">
                parent,
            </if>
            <if test="path!=null">
                path,
            </if>
            <if test="name!=null">
                name,
            </if>
            <if test="type!=null">
                type,
            </if>
            <if test="icon!=null">
                icon,
            </if>
            <if test="title!=null">
                title,
            </if>
            <if test="sort!=null">
                sort,
            </if>
            <if test="link!=null">
                link,
            </if>
            <if test="enable!=null">
                enable,
            </if>
            <if test="i18n!=null">
                i18n,
            </if>
            <if test="code!=null">
                code,
            </if>
        </trim>
        <trim prefix="values(" suffix=")" suffixOverrides=",">
            <if test="id!=null">
                #{id},
            </if>
            <if test="parent!=null">
                #{parent},
            </if>
            <if test="path!=null">
                #{path},
            </if>
            <if test="name!=null">
                #{name},
            </if>
            <if test="type!=null">
                #{type},
            </if>
            <if test="icon!=null">
                #{icon},
            </if>
            <if test="title!=null">
                #{title},
            </if>
            <if test="sort!=null">
                #{sort},
            </if>
            <if test="link!=null">
                #{link},
            </if>
            <if test="enable!=null">
                #{enable},
            </if>
            <if test="i18n!=null">
                #{i18n},
            </if>
            <if test="code!=null">
                #{code},
            </if>
        </trim>
    </insert>

    <!-- 根据 Id 修改数据 -->
    <update id="updateById" parameterType="com.nem.pro.modules.sys.domain.SysPower">
        update sys_power
        <set>
            <if test="parent!=null and parent!=''">
                parent = #{parent},
            </if>
            <if test="path!=null and path!=''">
                path = #{path},
            </if>
            <if test="name!=null and name!=''">
                name = #{name},
            </if>
            <if test="type!=null and type!=''">
                type = #{type},
            </if>
            <if test="icon!=null and icon!=''">
                icon = #{icon},
            </if>
            <if test="title!=null and title!=''">
                title = #{title},
            </if>
            <if test="sort!=null and sort!=''">
                sort = #{sort},
            </if>
            <if test="link!=null and link!=''">
                link = #{link},
            </if>
            <if test="enable!=null and enable!=''">
                enable = #{enable},
            </if>
            <if test="i18n!=null and i18n!=''">
                i18n = #{i18n},
            </if>
            <if test="code!=null and code!=''">
                code = #{code},
            </if>
        </set>
        where id = #{id}
    </update>

    <!-- 根据 Id 删除用户数据 -->
    <delete id="deleteById" parameterType="string">
          delete from sys_power where id = #{id}
    </delete>

</mapper>